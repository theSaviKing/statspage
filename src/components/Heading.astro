---
export interface Props {
    title?: string;
    header?: string;
    footer?: string;
}
const { title = "StatsPage", header = "", footer = "" } = Astro.props
---
<div class="flex flex-col justify-center items-center gap-1">
    {header == "" ? <></> : <p class="uppercase tracking-widest text-lg">{header}</p>}
    <p class="text-4xl font-black text-secondary">{title}</p>
    {footer == "" ? <></> : <p class="uppercase tracking-widest text-lg">{footer}</p>}
</div>